@model UpdateRoleViewModel

@{
    ViewData["Title"] = "Update";
}


<div class="container mt-5">
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">
                        Update Role
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Update">
                        <div class="form-group">
                            <label>RoleName</label>
                            <input type="text" name="RoleName" class="form-control" placeholder="@Model.RoleName" />
                        </div>
                        <div class="form-group">
                            <br />
                            <input type="submit" class="btn btn-primary btn-sm float-end" value="Submit" />
                        </div>
                    </form>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h3>Users in this role</h3>
                    </div>
                    <div class="card-body">
                        @if(Model.Users.Any())
                        {
                           foreach (var user in Model.Users)
                           {
                                <h4 class="card-title">@user</h4>
                            } 
                        }
                        else
                        {
                            <h4 class="card-title">None at the moment</h4>
                        }
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Role" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" class="btn btn-primary" style="width:auto">Add or remove Users</a>

                    </div>
                </div>
                <div class="card-body">
                    <a asp-action="List" class="btn btn-dark btn-sm">Back to List</a>
                </div>
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>