@model List<ProductPropertyVM>

@{
    ViewData["Title"] = "ListProductProperty";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h4>Product Property List</h4>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Value</th>
                                <th>Property Name</th>
                                <th>Product Name</th>                                
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Value</td>
                                    <td>@item.PropertyName</td>
                                    <td>@item.ProductName</td>                                    
                                    <td>
                                        <a asp-action="UpdateProductProperty" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Update</a>
                                    </td>
                                    <td>
                                        <a asp-action="DeleteProductProperty" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <a asp-action="CreateProductProperty" class="btn btn-primary">Create New One</a>
                </div>
            </div>
        </div>
    </div>
</div>

