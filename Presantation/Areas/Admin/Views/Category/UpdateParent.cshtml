@model UpdateParentCategoryDTO

@{
    ViewData["Title"] = "UpdateParent";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">
                        Update Parent Category
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateParent">
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" placeholder="Name" />
                        </div>
                        <br />
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary btn-sm" value="Submit" />
                        </div>
                    </form>
                </div>
                <div class="card-body">
                    <a asp-action="ListParent" class="btn btn-dark btn-sm">Back to List</a>
                </div>
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>
