@model UpdateCategoryDTO
@{
    ViewData["Title"] = "Update";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">
                        Update Category
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Update">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="CategoryName"></label>
                            <input asp-for="CategoryName" class="form-control" placeholder="CategoryName" />
                        </div>
                        <div class="form-group">
                            <label asp-for="ParentCategoryId"></label>
                            <input asp-for="ParentCategoryId" class="form-control" placeholder="ParentCategoryId" />
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary btn-sm" value="Submit" />
                        </div>
                    </form>
                </div>
                <div class="card-body">
                    <a asp-action="List" class="btn btn-dark btn-sm">Back to List</a>
                </div>
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>
